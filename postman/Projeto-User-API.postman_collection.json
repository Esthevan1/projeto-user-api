        "body": {
          "mode": "raw",
          "raw": "{\n  \"serviceId\": \"{{serviceId}}\",\n  \"startAt\": \"2025-12-01T10:00:00.000Z\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/v1/appointments", "host": ["{{baseUrl}}"], "path": ["api","v1","appointments"] }
